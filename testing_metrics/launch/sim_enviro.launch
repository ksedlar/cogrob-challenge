        <rosparam param="seq">[1.3,1.3,0,-1.3,1.3,0,0,0,0,1.3,-1.0,0,-1.3,-1.0,0]</rosparam>
        <rosparam param="yseq">[0, 0, 0, 0, 0]</rosparam>
    </node> -->

    <node pkg="testing_metrics" type="nav_sub.py" name="nav_sub" output="screen"/>

    <node pkg="active_slam" type="active_slam.py" name="active_slam"/>

</launch>
